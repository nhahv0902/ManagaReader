<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailMangaTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MangaDetailTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_grey_400</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MangaDetailSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_grey_100</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
    </style>

    <style name="MangaDetailTitleValues">
        <item name="android:gravity">right</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
