<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >
    <data>
        <import type="toandoan.framgia.com.rxjavaretrofit.data.model.MessageDownloading.StatusDownload"/>
        <import type="android.view.View"/>
        <variable
            name="pos"
            type="Integer"
            />
        <variable
            name="viewModel"
            type="toandoan.framgia.com.rxjavaretrofit.screen.downloading.DownloadingViewModel"
            />
        <variable
            name="message"
            type="toandoan.framgia.com.rxjavaretrofit.data.model.MessageDownloading"
            />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bluegrey_900"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_mangak_avatar"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/dp_5"
            app:layout_constraintBottom_toTopOf="@+id/view_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:imageUrl="@{message.avatar}"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_mangak_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{message.mangakName}"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toRightOf="@+id/image_mangak_avatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@{message.statusString}"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_14"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_mangak_name"
            />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{@string/title_item_chaper(message.chapterString)}"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_15"
            app:layout_constraintLeft_toRightOf="@+id/image_mangak_avatar"
            app:layout_constraintTop_toBottomOf="@+id/text_mangak_name"
            />
        <ProgressBar
            android:id="@+id/progress_percent_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:indeterminate="@{!message.statusBoolean}"
            android:max="100"
            android:progress="@{message.percent}"
            app:layout_constraintBottom_toTopOf="@+id/view_line"
            app:layout_constraintLeft_toRightOf="@+id/image_mangak_avatar"
            app:layout_constraintRight_toLeftOf="@+id/textView4"
            style="?android:attr/progressBarStyleHorizontal"
            />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@{@string/msg_percent_downloading(message.percent) + `%`}"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_13"
            android:visibility="@{message.statusBoolean ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toTopOf="@+id/view_line"
            app:layout_constraintRight_toRightOf="parent"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/view_line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@color/color_bluegrey_850"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
