<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="viewModel"
            type="toandoan.framgia.com.rxjavaretrofit.screen.favorite.FavoriteViewModel"
            />
        <variable
            name="manga"
            type="toandoan.framgia.com.rxjavaretrofit.data.model.Manga"
            />
        <variable
            name="pos"
            type="Integer"
            />
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical"
        android:padding="@dimen/dp_5"
        app:cardElevation="@dimen/dp_5"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.onItemClick(manga)}"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                bind:imageUrl="@{manga.avatar}"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/color_transparent"
                android:gravity="center"
                android:lines="1"
                android:padding="@dimen/dp_5"
                android:text="@{manga.name}"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_15"
                />
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="right"
            android:background="@drawable/bg_circle_red"
            android:onClick="@{() -> viewModel.onRemoveFavorite(manga,pos)}"
            android:padding="@dimen/dp_10"
            app:srcCompat="@drawable/ic_delete"
            />
    </android.support.v7.widget.CardView>
</layout>
